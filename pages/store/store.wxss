/* pages/store/store.wxss */

/* 商店首页初始样式 */
.store-page-container {
  box-sizing: border-box;
  /* padding: 20rpx; */
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.store-page-top {
  height: 240rpx;
  width: 100%;
  /* background: #ccc; */
  display: flex;
  box-sizing: border-box;
  padding: 30rpx 30rpx 40rpx 30rpx;
  position: relative;
}

.store-page-top-background {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: -1;
  filter: blur(5rpx);
  background: url('http://image.unknown-host.com/hand_strings/018c1f5a1537eba80121349046f3dc.jpg%401280w_1l_2o_100sh.jpg');
  background-size: 100% auto;
}

.store-page-left {
  flex: 1;
  display: flex;
  align-items: center;
  /* background: rgb(146, 115, 104); */
  color: #fff;
}

.store-info-top {
  font-weight: bold;
  margin-bottom: 10rpx;
}

.store-info-bottom {
  font-size: 20rpx;
}

.store-left-profile {
  width: 120rpx;
  height: 120rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.store-profile-image {
  border-radius: 50%;
  width: 100%;
  height: 100%;
}

.store-page-right {
  width: 150rpx;
  box-sizing: border-box;
  padding: 20rpx;
}

.store-right-erweima {
  width: 100%;
  height: 100%;
  border-left: 1px solid #e5e5e5;
  box-sizing: border-box;
  padding-left: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.erweima-right-icon {
  width: 55rpx;
  height: 55rpx;
  margin-bottom: 10rpx;
}

.erweima-right-text {
  font-size: 22rpx;
  color: #fff;
}

.store-page-content {
  flex: 1;
  /* background: cadetblue; */
  position: relative;
}

.store-content-container {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: -40rpx;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding-top: 20rpx;
}

.store-show-list {
  display: flex;
  flex: 1;
  overflow-y: auto;
}

.side-bar-wrapper {
  display: flex;
}

.side-bar-wrapper .content {
  flex: 1;
}

.side-bar-wrapper .section {
  padding: 32rpx 0;
}

.side-bar-wrapper .title {
  padding-left: 40rpx;
  margin-bottom: 8rpx;
  line-height: 52rpx;
}

.side-bar-wrapper .image {
  width: 96rpx;
  height: 96rpx;
}